<p id="notice"><%= notice %></p>

<h1><%= ProductType.model_name.human(count: @product_types.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @product_types.human_attribute_name(:type_name) %></th>
      <th><%= @product_types.human_attribute_name(:type_name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_types.each do |product_type| %>
      <tr>
        <td><%= product_type.type_name %></td>
        <td><%= link_to t('links.show'), product_type %></td>
        <td><%= link_to t('links.edit'), edit_product_type_path(product_type) %></td>
        <td><%= link_to t('links.delete'), product_type, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.product_type'), new_product_type_path, class:"btn btn-primary" %>
