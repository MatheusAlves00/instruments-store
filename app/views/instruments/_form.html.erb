<%= form_with model: instrument do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:'form-control' %>
    <% instrument.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :model %><br>
    <%= form.text_field :model, class:'form-control' %>
    <% instrument.errors.full_messages_for(:model).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :brand %><br>
    <%= form.text_field :brand, class:'form-control' %>
    <% instrument.errors.full_messages_for(:brand).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :price %><br>
    <%= form.number_field :price, min: 1.0, step: 0.5, class:'form-control' %>
    <% instrument.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:'form-control', rows:'3' %>
  </div> 

  <div class="form-group">
    <%= form.label :product_type_id %>
    <%= form.select("product_type_id", @product_type_options, { include_blank: 'Select...' }, class:"form-control") %>
  </div>

  <div class="form-group">
    <%= form.label :photo %><br>
    <%= form.file_field :photo, class:'form-control' %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
