<section class="vh-100 bg-image" style="background-color: DarkSlateGray;">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-outline mb-4">
                  <%= f.label :first_name, class:"form-label", for:"form3Example1cg" %><br>
                  <%= f.text_field :first_name, id:"form3Example1cg", class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :last_name, class:"form-label", for:"form3Example1cg" %><br>
                  <%= f.text_field :last_name, id:"form3Example1cg", class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :birth_date, class:"form-label", for:"form3Example1cg" %><br>
                  <%= f.date_field :birth_date, id:"form3Example1cg", class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :email, class:"form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form3Example3cg", class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :password, class:"form-label", for:"form3Example4cg" %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", id:"form3Example4cg", class:"form-control form-control-lg" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, class:"form-label", for:"form3Example4cg" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg" %>
                </div>

                <div class="form-check d-flex justify-content-center mb-5">
                  <input
                    class="form-check-input me-2"
                    type="checkbox"
                    value=""
                    id="form2Example3cg"
                  />
                  <label class="form-check-label" for="form2Example3g">
                    I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                  </label>
                </div>

                <div class="d-flex justify-content-center">
                  <%= f.submit "Sign up", class:"btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
                </div>
              <% end %>

              <p class="text-center text-muted mt-5 mb-0">Have already an account?<%= render "devise/shared/links", class:"fw-bold text-body" %></p>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
