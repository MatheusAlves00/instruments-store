<%= form_with model: @user do |form| %>

<div class="container light-style flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
      Edit settings
    </h4>

    <div class="card overflow-hidden">
      <div class="row no-gutters row-bordered row-border-light">
        <div class="col-md-9">
          <div class="tab-content">
            <div class="tab-pane fade active show">

              <hr class="border-light m-0">

              <div class="card-body">
                <div class="form-group">
                  <%= form.label :first_name, class:'form-label' %>
                  <%= form.text_field :first_name, class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :last_name, class:'form-label' %><br>
                  <%= form.text_field :last_name, class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :birth_date, class:'form-label' %><br>
                  <%= form.date_field :birth_date, class:'form-control mb-1' %>
                </div>
                <div class="form-group">
                  <%= form.label :address, class:'form-label' %>
                  <%= form.text_field :address, class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :phone, class:'form-label' %>
                  <%= form.text_field :phone, class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :email, class:'form-label' %><br>
                  <%= form.email_field :email, class:'form-control mb-1' %>
                </div>
                <div class="form-group">
                  <%= form.label :password, class:'form-label' %><br>
                  <%= form.password_field :password, class:'form-control' %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="text-right mt-3">
      <%= form.submit 'Save changes', class:'btn btn-primary' %>
      <%= link_to 'Cancel', user_path, class:'btn btn-default' %>
    </div>

  </div>
<% end %>
